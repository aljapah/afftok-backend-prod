graph TB
    subgraph "Presentation Layer"
        API[REST API Endpoints]
    end
    
    subgraph "Business Logic Layer"
        Auth[Authentication]
        Users[User Management]
        Offers[Offer Management]
        Trans[Transaction Processing]
    end
    
    subgraph "Data Access Layer"
        DAO[Data Access Objects]
        Cache[Cache Manager]
    end
    
    subgraph "Infrastructure Layer"
        DB[(Database)]
        Redis[(Redis)]
        Logger[Logging]
    end
    
    API --> Auth
    API --> Users
    API --> Offers
    API --> Trans
    
    Auth --> DAO
    Users --> DAO
    Offers --> DAO
    Trans --> DAO
    
    DAO --> Cache
    Cache --> Redis
    DAO --> DB
    
    Auth --> Logger
    Users --> Logger
    Offers --> Logger
    Trans --> Logger
